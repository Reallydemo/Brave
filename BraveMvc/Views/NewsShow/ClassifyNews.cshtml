@model PagedList.IPagedList<Models.News>
@using PagedList.Mvc;
@using Models
@{
    Layout = null;
}
<link href="~/Content/ClassifyNews.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ClassifyNews</title>
</head>
<body>
   
    <div class="classify">
        @foreach (var p in Model)
        {
            <div class="classifydiv">
                <a href="@Url.Action("Detail","NewsShow",new { id=@p.News_id})">@p.NewsTitle</a>
                <a href="@Url.Action("Detail","NewsShow",new { id=@p.News_id})"><img style="height:300px;width:100%;" src="@p.NewsPicture" /></a>
           </div>

        }
        
           
                    @Html.PagedListPager(Model, page => Url.Action("ClassifyNews", "NewsShow", new { page,  }))
              
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
              
            
    </div>
  

</body>
</html>
